@model SubWallet.Models.SubscriptionsViewModel

@{
    ViewData["Title"] = "Subscriptions";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <form asp-action="Add" asp-controller="Subscriptions" method="post">
            <div class="row g-3">
                <div class="col">
                    <label asp-for="NewSubscription.Name" class="form-label">Name</label>
                    <input asp-for="NewSubscription.Name" class="form-control" />
                    <span asp-validation-for="NewSubscription.Name" class="text-danger"></span>
                </div>

                <div class="col">
                    <label asp-for="NewSubscription.Cost" class="form-label">Cost</label>
                    <input asp-for="NewSubscription.Cost" type="number" step="0.01" class="form-control" />
                </div>

                <div class="col">
                    <label asp-for="NewSubscription.Cycle" class="form-label">Billing Cycle</label>
                    <select asp-for="NewSubscription.Cycle" class="form-select">
                        <option value="Weekly">Weekly</option>
                        <option value="BiWeekly">BiWeekly</option>
                        <option value="Monthly">Monthly</option>
                        <option value="Yearly">Yearly</option>
                    </select>
                </div>

                <div class="col d-flex align-items-end">
                    <button type="submit" class="btn btn-success w-100">Add</button>
                </div>
            </div>
        </form>
    </div>
</div>

<hr />
<div class="container mt-4">
    <div class="row">
        <!-- Chart -->
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <canvas id="subscriptionsChart"></canvas>
                </div>
            </div>
        </div>

        <!-- Actions -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h2 class="h5">Delete Subscription</h2>
                    <form asp-action="Delete" asp-controller="Subscriptions" method="post">
                        <label for="deleteSelect">Select:</label>
                        <select id="deleteSelect" name="id" class="form-control mb-2">
                            @foreach (var sub in Model.Subscriptions)
                            {
                                <option value="@sub.ID">@sub.Name</option>
                            }
                        </select>
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Edit Subscription</h2>
                    <form asp-action="Edit" asp-controller="Subscriptions" method="post">
                        <label for="editSelect">Select:</label>
                        <select id="editSelect" name="id" class="form-control mb-2">
                            @foreach (var sub in Model.Subscriptions)
                            {
                                <option value="@sub.ID">@sub.Name</option>
                            }
                        </select>

                        <label for="NewCost">New Cost:</label>
                        <input type="number" id="NewCost" name="Cost" step="0.01" required class="form-control mb-2" />

                        <label for="NewCycle">New Cycle:</label>
                        <select id="NewCycle" name="Cycle" class="form-control mb-2">
                            <option value="Weekly">Weekly</option>
                            <option value="BiWeekly">BiWeekly</option>
                            <option value="Monthly">Monthly</option>
                            <option value="Yearly">Yearly</option>
                        </select>

                        <button type="submit" class="btn btn-primary btn-sm">Update</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Chart.js Script -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    const ctx = document.getElementById('subscriptionsChart').getContext('2d');

    const labels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Subscriptions.Select(s => s.Name)));
    const data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.Subscriptions.Select(s => s.Cost)));
    
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: labels,
            datasets: [{
                label: 'Monthly Cost (U.S Dollars)',
                data: data,
                borderWidth: 1,
                backgroundColor: ['#90C2E7']
            }]
        },
        options: {
            plugins: {
                legend: {
                    position: 'top',
                    labels: {
                        
                        generateLabels: (chart) => {
                            
                            const defaults = Chart.defaults.plugins.legend.labels.generateLabels(chart);
                            let sum = 0;
                            for (let i = 0; i < chart.data.datasets[0].data.length; i++) {
                                sum += chart.data.datasets[0].data[i];
                            }
                            
                            return [
                                ...defaults,
                                {
                                    text: `Total A Month: $${sum.toFixed(2)}`,
                                    fillStyle: 'transparent',
                                    strokeStyle: 'transparent'
                                }
                            ];
                        }
                    }
                }
            }
        }
    });
    
</script>

